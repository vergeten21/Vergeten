#include <stdio.h>
main()
{
    int A[3][5],i,j;
    i=0;
    while(i<3)
    {
        j=0;
        while(j<5)
        {
            printf("A[%d][%d]:",i,j);
            scanf("%d",&A[i][j]);
            j++;
        } 
        i++;
    }       
}  

