#include <stdio.h>
main()
{
    int A[3][5],i,j;
    for(i=0;i<3;i++)
    {
        for(j=0;j<5;j++)
        {
            printf("A[%d][%d]:",i,j);
            scanf("%d",&A[i][j]);
        } 
    }       
}    
4)

#include <stdio.h>
#include <time.h>
main()
{
    int A[3][5],i,j;
    srand((unsigned)time(NULL));
    for(i=0;i<3;i++)
    {
        for(j=0;j<5;j++)
        {
            A[i][j]=rand()%101;
            printf("A[%d][%d]:%d",i,j,A[i][j]);
            printf("\n");
        } 
    }       
}    

